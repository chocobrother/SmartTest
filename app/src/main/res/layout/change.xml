<?xml version="1.0" encoding="utf-8"?>
<com.example.uclab.smarttest.ScalableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/plain_back"
    android:gravity="center"
    sl:scale_base_height="1920"
    sl:scale_base_width="1300">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/info_change_text"
        sl:scale_width="500"
        sl:scale_height="100"
        sl:scale_left="420"
        sl:scale_top="380"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PW : "
        sl:scale_height="140"
        sl:scale_left="220"
        sl:scale_textsize="80"
        sl:scale_top="600"
        sl:scale_width="250" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 : "
        android:textSize="20dp"
        sl:scale_height="140"
        sl:scale_left="220"
        sl:scale_textsize="80"
        sl:scale_top="800"
        sl:scale_width="250"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 : "
        android:textSize="20dp"
        sl:scale_height="140"
        sl:scale_left="220"
        sl:scale_textsize="80"
        sl:scale_top="1000"
        sl:scale_width="250"/>

    <EditText
        android:id="@+id/age"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        sl:scale_height="140"
        sl:scale_left="430"
        sl:scale_textsize="80"
        sl:scale_top="800"
        sl:scale_width="650"/>

    <EditText
        android:id="@+id/pw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        sl:scale_height="140"
        sl:scale_left="400"
        sl:scale_textsize="80"
        sl:scale_top="580"
        sl:scale_width="650"/>

    <CheckBox
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="남"
        sl:scale_height="140"
        sl:scale_left="-120"
        sl:scale_textsize="50"
        sl:scale_top="980"
        sl:scale_width="200"/>

    <CheckBox
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="여"
        sl:scale_height="140"
        sl:scale_left="100"
        sl:scale_textsize="50"
        sl:scale_top="980"
        sl:scale_width="200"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키 : "
        android:textSize="20dp"
        sl:scale_height="140"
        sl:scale_left="220"
        sl:scale_textsize="80"
        sl:scale_top="1200"
        sl:scale_width="250"/>

    <EditText
        android:id="@+id/height"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        sl:scale_height="140"
        sl:scale_left="380"
        sl:scale_textsize="80"
        sl:scale_top="1180"
        sl:scale_width="650"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />

    <Button
    android:id="@+id/cancel"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/cancle_btn"
    android:onClick="btnClick"
        sl:scale_height="150"
        sl:scale_left="700"
        sl:scale_textsize="80"
        sl:scale_top="1400"
        sl:scale_width="320"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <Button
    android:id="@+id/chan"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/change_btn"
    android:onClick="btnClick"
        sl:scale_height="150"
        sl:scale_left="250"
        sl:scale_textsize="80"
        sl:scale_top="1400"
        sl:scale_width="320"/>



</com.example.uclab.smarttest.ScalableLayout>